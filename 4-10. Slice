animals = ['lion', 'tiger', 'cheetah', 'leopard', 'jaguar', 'panther']

# Print the first three items in the list, formatted
print("The first three items in the list are:")
print(', '.join([animal.capitalize() for animal in animals[:3]]))

# Print three items from the middle of the list, formatted
print("Three items from the middle of the list are:")
print(', '.join([animal.capitalize() for animal in animals[2:5]]))

# Print the last three items in the list, formatted
print("The last three items in the list are:")
print(', '.join([animal.capitalize() for animal in animals[-3:]]))
